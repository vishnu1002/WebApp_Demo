@{
    ViewData["Title"] = "Tree Page";
}

@model List<MyTree>

<div class="text-center">
    <h1 class="display-4">World of Trees</h1>
    <p>Tree List</p>

    <a asp-controller="Tree" asp-action="Form">Add new tree</a>
    
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Links</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@Html.ActionLink("learn more...", "Details", "Tree", new { name = item.Name }, null)</td>
                </tr>
            }
		</tbody>
    </table>
</div>